<% include partials/header %>

<h2>Your current program session...</h2>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <form method="post" action="/exercise/set/add">
        <div class="form-group">
          <label>Exercise name</label>
          <select class="form-control" name="exercise">
            <% exercises.forEach(function(exercise) { %>
              <option value="<%= exercise._id %>"><%= exercise.name %></option>
            <% }); %>
          </select>
        </div>
        <div class="form-group">
          <label>Reps completed</label>
          <input class="form-control" type="text" placeholder="10" name="reps">
        </div>
        <div class="form-group">
          <label>Weight used</label>
          <input class="form-control" type="text" placeholders="135" name="weight">
        </div>
        <button class="btn btn-default" type="submit">Submit completed set</button>
      </form>
    </div>
    <div class="col-md-6">
      <% if (typeof exercises != 'undefined') { %>
        <% exercises.forEach(function(exercise) { %>
          <%- include('components/exerciseDisplay', {exercise: exercise}); %>
        <% }); %>
      <% } %>
      <form method="post" action="/workout/complete">
        <button class="btn btn-primary" type="submit">Complete program</button>
      </form>
    </div>
  </div>
</div>

<script src="/log.js"></script>
<% include partials/footer %>
