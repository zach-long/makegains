<% include partials/header %>

<% include partials/flashMessages %>

<div class="container">
  <h2 class="page-header text-center">Welcome, <%= user.name %>.</h2>
  <div class="row">
    <div id="exercises" class="col-md-6">
      <h3 class="text-center">Your Exercises | <a href="/exercise/new">New</a></h3>
      <!--
      <div id="exercise-sort" class="sort-by text-center">
        <% var exerciseTypes = ['All', 'Chest', 'Back', 'Shoulders', 'Arms', 'Legs', 'Core', 'Other']; %>
        <% exerciseTypes.forEach(function(exercise) { %>
          <button class="btn btn-default exercise-category"><%= exercise %></button>
        <% }); %>
      </div>
      -->
      <div class="input-group full-width">
        <div class="button-group">
          <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort By <span class="caret"></span>
          </button>
          <ul id="exercise-sort" class="dropdown-menu sort-by">
            <% var exerciseTypes = ['All', 'Chest', 'Back', 'Shoulders', 'Arms', 'Legs', 'Core', 'Other']; %>
            <% exerciseTypes.forEach(function(exercise) { %>
              <li><a class="exercise-category"><%= exercise %></a></li>
            <% }); %>
          </ul>
        </div>
        <span class="input-group-addon" id="exercise-category-type">All</span>
      </div>
      <div class="loading">
        <p class="text-center"><span class="glyphicon glyphicon-repeat spin" aria-hidden="true"></span></p>
      </div>
    </div>
    <div id="programs" class="col-md-6">
      <h3 class="text-center">Your Programs | <a href="/program/new">New</a></h3>
      <div class="loading">
        <p class="text-center"><span class="glyphicon glyphicon-repeat spin" aria-hidden="true"></span></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="workouts" class="col-md-8 col-md-offset-2">
      <h3 class="text-center">Your workout history |
        <% if (typeof workoutInProgress !== 'undefined' && workoutInProgress === true) { %>
          <a href="/workout/log">Continue Logging</a>
        <% } else { %>
          <a href="/workout/log">New</a>
        <% } %>
      </h3>
      <div class="loading">
        <p class="text-center"><span class="glyphicon glyphicon-repeat spin" aria-hidden="true"></span></p>
      </div>
    </div>
  </div>
</div>

<!--<script src="/javascript/DEV.js"></script>-->

<% include partials/footer %>
