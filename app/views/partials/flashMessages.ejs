<% if (typeof authError != 'undefined') { %>
  <div class="alert alert-danger alert-dismissable fade in fill-top">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="text-center">Sign up error!</h3>
    <% authError.forEach(function(err) { %>
      <p class="text-center"><%= err.msg %></p>
    <% }); %>
  </div>
<% } %>

<% if (typeof passportError != 'undefined' &&
       passportError.length > 0) { %>
  <div class="alert alert-danger alert-dismissable fade in fill-top">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="text-center">Sign in error!</h3>
    <p class="text-center"><%= passportError %></p>
  </div>
<% } %>

<% if (typeof flashFail != 'undefined' &&
       flashFail.length > 0) { %>
  <div class="alert alert-danger alert-dismissable fade in fill-top">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="text-center">Oops!</h3>
    <% flashFail.forEach(function(errorMessage) { %>
      <p class="text-center"><%= errorMessage %></p>
    <% }); %>
  </div>
<% } %>

<% if (typeof flashSuccess != 'undefined' &&
       flashSuccess.length > 0) { %>
  <div class="alert alert-success alert-dismissable fade in fill-top">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="text-center">Good news!</h3>
    <% flashSuccess.forEach(function(successMessage) { %>
      <p class="text-center"><%= successMessage %></p>
    <% }); %>
  </div>
<% } %>
