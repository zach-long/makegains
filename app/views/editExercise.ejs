<% include partials/header %>

<div class="container">
  <h3 class="text-center">Edit <%= exercise.name %></h3>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form method="post" action="/exercise/edit/<%= exercise._id %>">
        <div class="form-group">
          <label>Name</label>
          <input class="form-control" type="text" value="<%= exercise.name %>" name="name">
        </div>
        <div class="form-group">
          <label>Description</label>
          <input class="form-control" type="text" value="<%= exercise.description %>" name="description">
        </div>
        <button class="btn btn-primary" type="submit">Apply update</button>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>
